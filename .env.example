# Mobile Bolt Environment Configuration

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
NODE_ENV=development
PORT=5173

# WebContainer Configuration  
WEBCONTAINER_API_ENDPOINT=https://webcontainer.io
WEBCONTAINER_API_KEY=your_webcontainer_api_key_here

# Database (SQLite for development)
DATABASE_URL=file:./dev.db

# Authentication (optional - for user accounts)
AUTH_SECRET=your_auth_secret_key_here
AUTH_GITHUB_ID=your_github_oauth_app_id
AUTH_GITHUB_SECRET=your_github_oauth_app_secret

# Expo Integration
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# Analytics (optional)
ANALYTICS_API_KEY=your_analytics_api_key_here

# Feature Flags
ENABLE_MOBILE_PREVIEW=true
ENABLE_DEVICE_TESTING=true
ENABLE_AI_DEBUGGING=true
ENABLE_EXPO_BUILDS=false

# Development Settings
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false