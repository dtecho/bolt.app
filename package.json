{
  "name": "mobile-bolt",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered mobile development environment for creating React Native apps in the browser",
  "keywords": [
    "mobile-development",
    "react-native", 
    "expo",
    "ai-assisted",
    "claude",
    "webcontainer",
    "bolt"
  ],
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.15.1",
    "pnpm": ">=9.4.0"
  },
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build", 
    "start": "remix-serve build/server/index.js",
    "preview": "vite preview",
    "lint": "eslint app --ext .ts,.tsx --fix",
    "lint:check": "eslint app --ext .ts,.tsx",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@remix-run/serve": "^2.11.2",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-typescript": "^6.0.1",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.28.4",
    "@codemirror/state": "^6.4.1",
    "@codemirror/commands": "^6.6.0",
    "@codemirror/search": "^6.5.6",
    "@uiw/react-codemirror": "^4.21.21",
    "@webcontainer/api": "^1.6.0",
    "clsx": "^2.1.1",
    "isbot": "^4.1.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "socket.io-client": "^4.7.5",
    "tailwind-merge": "^2.5.0",
    "uuid": "^10.0.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.11.2",
    "@types/node": "^20.15.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^1.6.0"
  }
}